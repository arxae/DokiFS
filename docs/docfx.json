{
    "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
    "metadata": [
        {
            "src": [
                {
                    "src": "../src",
                    "files": ["**/*.csproj"]
                }
            ],
            "output": "api",
            "includePrivateMembers": false,
            "namespaceLayout": "nested"
        }
    ],
    "build": {
        "content": [
            {
                "files": ["**/*.{md,yml}"],
                "exclude": [
                    "_site/**"
                ]
            }
        ],
        "resource": [
            {
                "files": ["images/**"]
            }
        ],
        "output": "_site",
        "template": ["default", "modern"],
        "globalMetadata": {
            "_appName": "DokiFS",
            "_appTitle": "DokiFS",
            "_appLogoPath": "images\\dokifs_small_right.png",
            "_enableSearch": true,
            "pdf": false
        }
    }
}
